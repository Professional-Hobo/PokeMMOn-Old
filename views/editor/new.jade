      Bootstrap core JavaScript
      ==================================================
      Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='js/editor/bootstrap.js')
