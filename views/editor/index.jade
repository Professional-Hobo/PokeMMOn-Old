        script(src='js/editor/async.js')
        script(src='js/editor/ui.js')
        script(src='js/editor/Tileset.js')

        script(src='js/editor/PokeWorld.js')
        script(src='js/editor/Tile.js')
        script(src='js/editor/PokeMap.js')
